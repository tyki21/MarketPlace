<p id="notice"> <%= notice %> </p>

<h1> Welcome to MarketPlace!</h1>

<% @products.each do |products| %>
  <div class="entry">
    <%= image_tag(product.image_url) %>
    <h3><%= products.name %></h3>
    <%= sanitize(product.description) %>
    <div class="price_line">
      <span class="price"><%= product.price %></span>
    </div>
  </div>
  <% end %>
